homem(herbert).
homem(bart).
mulher(abbey).
mulher(patty).
mulher(lisa).
mulher(maggie).

pai(abraham-2,homer).
pai(abraham-2,herbert).
pai(abraham-2,abbey).
pai(clancy-bouvier, marge-bouvier).
pai(clancy-bouvier, selma).
pai(clancy-bouvier, patty).
pai(homer, maggie).
pai(homer, lisa).
pai(homer, bart).
mae(marge-bouvier, maggie).
mae(marge-bouvier, lisa).
mae(marge-bouvier, bart).
mae(selma, ling).
mae(mona-olsen, homer).
mae(jaqueline-gurney, marge-bouvier).
mae(jaqueline-gurney, selma).
mae(jaqueline-gurney, patty).

avô(X,Y) :- pai(X, Z), (pai(Z, Y);mae(Z,Y)).
avó(X,Y) :- mae(X,Z), (pai(Z,Y);mae(Z,Y)).

filho(X, Y) :- pai(Y, X); mae(Y, X).

filhop(X, Y) :- pai(Y, X).

neto(X, Y) :- filho(X, Z), filho(Z, Y).

avos(X, Y) :- filho(Y, Z), filho(Z, X).

irmao(X, Y) :- filhop(X, Z), filhop(Y, Z).

tio(X, Y) :- filho(Y, Z), irmao(Z, X).

primos(X, Y) :- filho(X, Z), filho(Y, W), irmao(Z, W).
